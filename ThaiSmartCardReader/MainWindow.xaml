<Window
    x:Class="ThaiSmartCardReader.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Thai SmartCard Reader"
    Width="850"
    Height="650"
    Loaded="Window_Loaded"
    mc:Ignorable="d">

    <Grid Margin="10">
        <!--  Row layout: Header / Content / Footer  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Header  -->
            <RowDefinition Height="*" />
            <!--  Main content  -->
            <RowDefinition Height="Auto" />
            <!--  Footer  -->
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Margin="0,0,0,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            FontSize="12"
            Foreground="Gray"
            Text=".NET 9 is Supported" />

        <!--  Content  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <!--  Spacer  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left: Photo  -->
            <Border
                Grid.Column="0"
                Padding="4"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="DarkGray"
                BorderThickness="1">
                <Image
                    x:Name="Image_PersonalPhoto"
                    Width="120"
                    Height="150"
                    Stretch="Uniform" />
            </Border>

            <!--  Right: Text Data  -->
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Orientation="Vertical">

                <!--  บัตรประชาชน  -->
                <GroupBox
                    Margin="0,0,0,10"
                    HorizontalAlignment="Stretch"
                    FontWeight="Bold"
                    Header="ข้อมูลจากบัตรประชาชน">
                    <TextBox
                        x:Name="TextBox_Data"
                        MinHeight="200"
                        Padding="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AcceptsReturn="True"
                        Background="#FFFDFDFD"
                        FontSize="14"
                        IsReadOnly="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </GroupBox>

                <!--  NHSO  -->
                <GroupBox
                    HorizontalAlignment="Stretch"
                    FontWeight="Bold"
                    Header="ข้อมูลสิทธิจาก NHSO">
                    <TextBox
                        x:Name="TextBox_NHSO"
                        MinHeight="140"
                        Padding="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AcceptsReturn="True"
                        Background="#FFFDFDFD"
                        FontSize="14"
                        IsReadOnly="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </GroupBox>
            </StackPanel>
        </Grid>

        <!--  Footer  -->
        <TextBlock
            Grid.Row="2"
            Margin="0,5,0,0"
            HorizontalAlignment="Center"
            FontSize="12"
            Foreground="DarkGray"
            Text="Powered by ThaiNationalIDCard Library" />
    </Grid>
</Window>
